@{
    ViewBag.Title = "Manage Redirects";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model RedirectViewModel

<div class="siteSettings">
    <div class="row">
        <div class="col-lg-12">
            <h3><i class="fa fa-wrench"></i>Manage Redirects @Html.Partial("Partials/BookmarkButtonPartial")</h3>
        </div>
        <a id="NewBlogPage" class="btn btn-primary mobileBlockStatic mobileMarginBottom" data-toggle="modal" data-target="#AddRedirectModal" href="#">New Redirect +</a>
    </div>

    <table class="manageTable twelve bordered manageTable">
        <thead>
            <tr>
                <th>Source</th>
                <th>Destination</th>
                <th>Is Permanent</th>
                <th>Root Matching</th>
                 <th>Actions</th>
            </tr>
        </thead>
        <tbody id="redirectBody">
            @foreach (var redirect in Model.Redirects)
            {
                <tr>
                    <td>@redirect.Source</td>
                    <td>@redirect.Destination</td>
                    <td>@redirect.IsPermanent</td>
                    <td>@redirect.RootMatching</td>
                    <td>
                        <a class="deleteRedirectButton btn btn-danger btn-sm" href="#" data-id="@redirect.RedirectId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script src="/Areas/Admin/Scripts/redirectAdmin.js"></script>
      <script src="/Areas/Admin/Scripts/jquery/plugins/datatables/js/jquery.dataTables.min.js"></script>

            <script>
                $(document).ready(function () {
                    $("table.manageTable").dataTable({
                        "iDisplayLength": 25,
                        "aoColumnDefs": [
                            { "bSortable": false, "aTargets": ["actions"] } // No Sorting on actions
                        ],
                        "aaSorting": [[0, "desc"]] // Sort by id
                    });
                });
            </script>
}
@section Modals {
    
    <div id="DeleteModal" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h2>Delete Redirect</h2>
                    <p class="lead">Are you sure you want to delete this redirect?</p>
                </div>
                <div class="modal-body">
                    <div class="content container-fluid">
                        <p>It will be <em>permanently</em> deleted.</p>
                    </div>
                </div>
                <div class="modal-footer">
                    <a id="ConfirmRedirectDelete" class="pull-right btn btn-primary confirmModalButton">Confirm</a>
                    <a class="pull-right btn btn-default" onclick="$('#DeleteModal').modal('hide');">Cancel</a>
                </div>
            </div>
        </div>
    </div>

    <div id="AddRedirectModal" class="modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h2>New Redirect</h2>
                    <p class="lead">Create a new redirect.</p>
                </div>
                <div class="modal-body">
                    <div class="content container-fluid">
                        <label>Source: </label>
                        <input class=" form-control form-group" id="SourceInput" type="text" autocomplete="off" />
                        <label>Destination: </label>
                        <input class=" form-control form-group" id="DestinationInput" type="text" autocomplete="off" />
                        <div class="checkbox">
                            <label>
                                <input id="PermanentInput" type="checkbox" /> Permanent
                            </label>
                        </div>
                        <div class="checkbox">
                            <label>
                                <input id="MatchingInput" type="checkbox" /> Root matching
                            </label>
                            <p class="help-block">
                                <small>
                                    When enabled <code>/source-path/</code> will match:<br />
                                    <code>/destination-path/</code><br/>
                                    <code>/destination-path/new-page</code><br/>
                                    <code>/destination-path/new-page/two</code><br/>
                                    etc.
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a id="ConfirmAddRedirect" class="pull-right btn btn-primary confirmModalButton tabletBlockStatic">Add</a>
                    <a class="pull-right btn btn-default" onclick="$('#AddRedirectModal').hide();">Cancel</a>
                </div>
            </div>
        </div>
    </div>
}
