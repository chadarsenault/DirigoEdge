@{
	ViewBag.Title = "Enable Features";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model DirigoEdge.Areas.Admin.Models.ViewModels.FeatureSettingsViewModel

<div class="siteSettings">
    <div class="row">
        <div class="col-lg-12">
            <h3>Enable Features @Html.Partial("Partials/BookmarkButtonPartial")</h3>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-4 col-xs-6">
            <label class="right inline">Events</label>
        </div>
        <div class="col-lg-8  col-xs-6">
            <form class="custom">
                @{
                    string isChecked = Model.Settings.EventsEnabled ? "checked = checked" : "";
                }
                <input class="custom saveField" data-field="EventsEnabled" autocomplete="off" type="checkbox" @isChecked />
                <div class="settingsComment hidden-xs">Enables an 'Events' administration menu in the admin area, as well as a 'site.com/events/' url that will display all current events. </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="contain pull-left">
                <a class="btn btn-primary mobileMarginBottom savePageButton" data-url="/admin/settings/savefeaturesettings/">Save</a>
                <div id="SaveIndicator"></div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="/Areas/Admin/Scripts/siteSettings.js"></script>
}