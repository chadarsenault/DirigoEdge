@model DirigoEdge.Areas.Admin.Models.ViewModels.EditBlogViewModel

<h4>Visibility</h4>

<div class="content">
    <div class="status">
        <a id="PreviewBlogButton" class="btn small btn-info right mobileMarginBottom">Preview</a>
        @{
                        string Checked = (bool)Model.ThisBlog.IsActive ? "checked = checked" : "";
                        string featChecked = (bool)Model.ThisBlog.IsFeatured ? "checked = checked" : "";
        }
        <form class="custom">
            <label for="IsPublicCheck">
                <input class="" type="checkbox" @Checked id="IsPublicCheck"> Is Public</label>
            <label for="IsFeaturedCheck">
                <input class="" type="checkbox" @featChecked id="IsFeaturedCheck"> Is Featured</label>
        </form>
    </div>
    @{
                    string formattedDate = Convert.ToDateTime(Model.ThisBlog.Date).ToString("MM/dd/yyyy");
    }
    <div class="publishContainer">
        <b>Publish Date : </b>
        <input class=" form-control" id="PublishDate" value="@formattedDate" type="text" autocomplete=off>
    </div>
</div>