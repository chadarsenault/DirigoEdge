@model DirigoEdgeCore.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-8 col-sm-12">
        <h1>@ViewBag.Title.</h1>

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {@class="form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class= "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.UserName, new { @class= "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class= "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.PasswordFor(m => m.Password, new { @class= "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class= "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class= "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.RegistrationCode, new { @class= "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.RegistrationCode, new { @class= "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary registerUserButton">Register</button>
                </div>
            </div>
            <input type="hidden" name="TimeZone" id="TimeZone" />
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $('#TimeZone').val(jstz.determine().name());
        });
    </script>
}