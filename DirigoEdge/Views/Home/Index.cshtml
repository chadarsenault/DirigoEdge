@{
    ViewBag.Title = "Home";
}
@using DirigoEdgeCore.Utils.Extensions
@model DirigoEdge.Models.ViewModels.HomeViewModel

<!-- First Band (Image Slider) -->
<div class="row">
    <div class="col-lg-12">
        @{
            if (Model.Slideshow != null)
            { 
                @Html.Partial("SlideShowModule", Model.Slideshow)
            }
        }
    </div>
</div>

<!-- First Band (Content Sections) -->
<div class="row">
    <div class="col-lg-4">
        @Html.RenderUserContentModuleWithOnScreenEditors("Homepage Module 1")
    </div>
    <div class="col-lg-4">
        @Html.RenderUserContentModuleWithOnScreenEditors("Homepage Module 1")
    </div>
    <div class="col-lg-4">
        @Html.RenderUserContentModuleWithCodeEditor("Homepage Module 1")
    </div>
</div>

<!-- Call to Action Panel -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel container-fluid">
            <h4>Get in touch!</h4>
            <div class="row">
                <div class="col-lg-9">
                    <p>We'd love to hear from you, you attractive person you.</p>
                </div>
                <div class="col-lg-3">
                    <a href="/contact" class="radius btn btn-primary pull-right">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @* Call the slideshow*@
    @{
        if (Model.Slideshow != null)
        {  
            <script>
                $("#@Model.Slideshow.SlideShowName").orbit({
                    animationSpeed: @Model.Slideshow.AnimationSpeed,
                    advanceSpeed: @Model.Slideshow.AdvanceSpeed,
                    directionalNav: @Model.Slideshow.UseDirectionalNav.ToString().ToLower(),
                    bullets: @Model.Slideshow.ShowBullets.ToString().ToLower(),
                    animation : '@Model.Slideshow.Animation',
                    timer : @Model.Slideshow.UseTimer.ToString().ToLower(),
                    pauseOnHover : @Model.Slideshow.PauseOnHover.ToString().ToLower()
                    });
            </script>
        }
    }
}